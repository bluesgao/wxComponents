.navbar-inner {
    width: 100%;
    background-color: #ce9e9e;
    z-index: 4;
    position: fixed;
    top: 0;
    left: 0;
}

.navbar-center {
    height: 44px;
    display: flex;
    align-items: center;
    position: relative;
}

.capsule {
    margin-left: 10px;
    height: 32px;
    border: 1px solid #777;
    border-radius: 16px;
    display: flex;
    align-items: center;
}

.capsule > view {
    width: 38px;
    height: 60%;
    position: relative;
}

.capsule > view:nth-child(2) {
    border-left: 1px solid #777;
}

.capsule image {
    width: 60%;
    height: 100%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.title {
    color: white;
    position: absolute;
    left: 104px;
    right: 104px;
  font-size: 17px;
  line-height: 17px;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.search-bar-container {
    height: 44px;
    /* padding: 0px 10px; */
    /* 两个参数，第一个用于上、下，第二个用于左、右
     四个参数，将按上、右、下、左的顺序作用于四边*/
    /* margin: 0px 10px 10px 10px; */
    display: flex;
    align-items: center;
    overflow: hidden;
}

.search-bar-container-box {
    width: 100%;
    height: 32px;
    display: flex;
    align-items: center;
    border-radius: 16px;
    background: #f5f5f5;
    margin: 6px 10px 6px 10px;
}

.search-bar-container-box icon {
    margin: 10px;
    size: 24px;
}

.search-bar-container-box input {
    height: 32px;
    line-height: 32px;
    font-size: 14px;
    width: 100%;
}
